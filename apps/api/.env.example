# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration (when you add database)
# DATABASE_URL=postgresql://username:password@localhost:5432/better_openlms
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=better_openlms
# DB_USER=your_username
# DB_PASSWORD=your_password

# Redis Configuration (when you add caching)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info

# External Services (when you add them)
# EMAIL_SERVICE_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# File Storage (when you add file uploads)
# STORAGE_PROVIDER=aws-s3
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

{
  "name": "@better-openlms/apiv2",
  "version": "1.0.0",
  "description": "Better OpenLMS API v2 built with Hono framework",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "hono",
    "api",
    "typescript",
    "lms",
    "learning-management-system"
  ],
  "author": "Better OpenLMS Team",
  "license": "MIT",
  "dependencies": {
    "@betterlms/database": "workspace:*",
    "@betterlms/email": "workspace:*",
    "@betterlms/storages": "workspace:*",
    "@betterlms/core": "workspace:*",
    "hono": "^4.0.0",
    "@hono/node-server": "^1.8.0",
    "@hono/zod-validator": "^0.2.0",
    "zod": "^3.22.4",
    "jose": "^6.1.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.61.0",
    "ioredis": "^5.8.1",
    "open-graph-scraper": "^6.10.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@betterlms/typescript": "workspace:*",
    "@types/node": "^24.6.2",
    "@types/node-jose": "^1.1.13",
    "@types/bcrypt": "^6.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
